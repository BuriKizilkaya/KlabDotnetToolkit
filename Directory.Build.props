<Project>
  <PropertyGroup>
    <Copyright>Copyright (C) 2023 Klab</Copyright>
    <AssemblyCompany>Klab</AssemblyCompany>
    <AssemblyCopyright>Copyright (C) 2023 Klab</AssemblyCopyright>
    <AssemblyProduct>Klab.Toolkit</AssemblyProduct>
    <Company>Klab</Company>
    <NeutralLanguage>en-US</NeutralLanguage>
    <Platforms>x64</Platforms>
    <PackageTags>toolkit</PackageTags>
    <AnalysisMode>Recommended</AnalysisMode>
    <PlatformTarget>$(Platform)</PlatformTarget>
    <TargetFramework>net6.0, net7.0</TargetFramework>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest</AnalysisLevel>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(MSBuildProjectExtension)' == '.csproj'">
    <RepositoryUrl></RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(MSBuildProjectExtension)' == '.csproj'">
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup Condition="'$(MSBuildProjectExtension)' == '.csproj'">
    <AdditionalFiles Include="$(MSBuildThisFileDirectory)GlobalSuppressions.cs"
      Link="GlobalSuppressions.cs" />
  </ItemGroup>
</Project>